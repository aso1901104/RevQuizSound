<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9500BCD4"
    tools:context=".QuestActivity">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/questionText"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="415dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39"
        app:srcCompat="@drawable/repo" />

    <Button
        android:id="@+id/wrong"
        android:layout_width="@dimen/questbtn_width"
        android:layout_height="@dimen/questbtn_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/questBtnSpace"
        android:text="@string/wrong_Text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/right"
        android:layout_width="@dimen/questbtn_width"
        android:layout_height="@dimen/questbtn_height"
        android:layout_marginTop="@dimen/questBtnSpace"
        android:layout_marginEnd="8dp"
        android:text="@string/right_Text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/questions"
        android:layout_width="@dimen/questbtn_width"
        android:layout_height="@dimen/questbtn_height"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="@dimen/questBtnSpace"
        android:text="@string/question_Text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/handclap"
        android:layout_width="@dimen/questbtn_width"
        android:layout_height="@dimen/questbtn_height"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="@dimen/questBtnSpace"
        android:text="@string/handclap_Text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/ansButton"
        android:layout_width="@dimen/questbtn_width"
        android:layout_height="@dimen/questbtn_width"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/answer" />

</androidx.constraintlayout.widget.ConstraintLayout>